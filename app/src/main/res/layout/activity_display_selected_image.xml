<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">'
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#fefcfb"
            android:elevation="4dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imagetoBeSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:elevation="2dp">



            <Button
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:text="Send"
                android:textSize="18dp"
                android:paddingHorizontal="35dp"
                android:onClick="onSendButtonClick"
                android:drawableStart="@drawable/ic_validate"
                android:background="@drawable/round_button_gray"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:elevation="2dp">

            <Button
                android:id="@+id/goBackbtn"
                android:layout_width="56dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="56dp"
                android:paddingStart="10dp"
                android:paddingTop="13dp"
                android:backgroundTint="@color/light_peche"
                android:onClick="onBackButtonClick"
                android:drawableTop="@drawable/ic_back" />

        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>